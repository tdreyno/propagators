{
  "name": "@tdreyno/propagators",
  "version": "1.0.0",
  "main": "build/index.js",
  "repository": "https://github.com/tdreyno/propagators.git",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "build": "pika build && yarn compress",
    "compress": "terser pkg/dist-web/index.js -o pkg/dist-web/index.min.js --source-map --mangle --compress passes=2 --toplevel --mangle-props regex=/_$/ && gzip-size pkg/dist-web/index.min.js",
    "version": "yarn run build",
    "perf": "ts-node -O '{ \"module\": \"commonjs\" }' ./benchmarks/benchmark.ts",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "lint-staged": {
    "*.{js}": [
      "eslint -c .eslintrc.js --ext .js src --fix",
      "prettier --write"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "volta": {
    "node": "14.11.0",
    "yarn": "1.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/prompt": "^11.0.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "gzip-size-cli": "^3.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.8",
    "terser": "^5.5.1"
  },
  "dependencies": {
    "ramda": "^0.27.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
